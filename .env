# =======================
# Postgres
# =======================
PG_HOST=127.0.0.1
PG_PORT=5432
PG_DATABASE=TestDb
PG_USER=hyunsookim
PG_PASSWORD=rlagustn990429!

# (레거시 뷰 이름 사용 중이면 유지 – 없어도 무방)
BPMF_VIEW=brand_product_materials_functionalities
MF_VIEW=material_functionality

# =======================
# Defaults
# =======================
DEFAULT_CATEGORY=functional_food

# =======================
# Embeddings (Ollama)
# =======================
EMBED_ENDPOINT=http://127.0.0.1:11434
EMBED_MODEL=nomic-embed-text
EMBED_DIM=768

# =======================
# Hybrid Search Weights/Thresholds
# =======================
SEARCH_ALPHA=0.45
SEARCH_BETA=0.40
SEARCH_GAMMA=0.10
SEARCH_DELTA=0.20
TRGM_MIN_SIM=0.28

# =======================
# Context / Selection Limits
# =======================
EVIDENCE_MAX=5
MAX_PER_SOURCE=1
MAX_CONTEXT_CHARS=2500

TRUNCATION_MODE=sentence_boundary
MUST_BACKOFF_ORDER=both,either,none
CITATION_STYLE=[{n}]

# =======================
# Prompt
# =======================
MAX_PROMPT_CHARS=8000

# =======================
# LLM (Ollama)
# =======================
LLM_MODEL=qwen2.5:1.5b-instruct-q4_K_M   # 필요 시 qwen2.5:7b-instruct 등으로 교체
LLM_BASE_URL=http://127.0.0.1:11434
LLM_TEMPERATURE=0.2
LLM_TOP_P=0.9
LLM_MAX_TOKENS=256
LLM_TIMEOUT=90

LLM_MAX_RETRIES=2
LLM_NUM_CTX=2048

# =======================
# Logging / Tracing
# =======================
ENABLE_STRUCTURED_LOG=true
LOG_SAMPLE_RATE=1.0
LOG_LEVEL=INFO
REDACT_PII=true

# (선택) 디버그 토글
DEBUG_LLM=true
DEBUG_CTRL=true
DEBUG_PRMPT=true
